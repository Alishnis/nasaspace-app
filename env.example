# NASA TEMPO Air Quality Monitor - Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nasa-tempo-air-quality
REDIS_HOST=localhost
REDIS_PORT=6379

# API Keys
TEMPO_API_KEY=your-nasa-tempo-api-key
WEATHER_API_KEY=your-openweathermap-api-key

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key

# Notification Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Push Notification Service
FCM_SERVER_KEY=your-firebase-cloud-messaging-server-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
